# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database
MONGODB_URI=mongodb://admin:changeme@localhost:27017/onlineshop?authSource=admin

# Redis
REDIS_URL=redis://:changeme@localhost:6379

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# 1C Integration
1C_API_URL=http://your-1c-server/api
1C_API_USERNAME=api_user
1C_API_PASSWORD=api_password
1C_SYNC_INTERVAL=1800000

# Transport Companies API
DL_API_URL=https://api.dellin.ru/v2
DL_API_KEY=your_delovye_linii_api_key
PEK_API_URL=https://kabinet.pecom.ru/api
PEK_API_KEY=your_pek_api_key

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHANNEL_ID=@your_channel_name
TELEGRAM_SYNC_INTERVAL=900000

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=Онлайн Магазин

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
